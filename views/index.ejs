<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Button Game</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var socket = io();

            $('.epic').click(function () {
                socket.emit('push');
            });
            socket.on('count', function (data) {
                $(".number").html(data.response)
            })
            $('.reset').click(function () {
                socket.emit('reset')
            });
            socket.on('refresh', function (data){
                $(".number").html(data.response)
            });
        });

    </script>
</head>

<body>
    <div class='row'>
        <div class='col-sm-2'></div>
        <div class='col-sm-8'>
            <h1>The button has been pushed <span class="number"></span> time(s)</h1>
        </div>
        <div class='col-sm-2'></div>
    </div>
    <p></p>
    <div class='row'>
        <div class='col-sm-4'></div>
        <div class='col-sm-4'>
            <h4>Push the button</h4>
        </div>
        <div class='col-sm-4'></div>
    </div>
    <p></p>
    <div class='row'>
        <div class='col-sm-4'></div>
        <div class='col-sm-4'>
            <input type="submit" class="btn btn-info btn-lg epic" value="Epic Button">
        </div>
        <div class='col-sm-4'></div>
    </div>
    <p></p>
    <div class='row'>
        <div class='col-sm-4'></div>
        <div class='col-sm-4'>
            <button type="button" class="btn btn-lg btn-outline-danger reset">Reset Button</button>
        </div>
        <div class='col-sm-4'></div>
    </div>

</body>

</html>